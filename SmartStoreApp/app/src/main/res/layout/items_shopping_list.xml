<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shopping_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:layout_margin="15dp"
            android:background="@drawable/img_item"
            android:src="@drawable/coffee1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/shopping_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/l_regular"
                        android:text="아메리카노"
                        android:textColor="@color/coffee_dark_brown"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/shopping_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Won. 2000"
                        android:fontFamily="@font/s_light"
                        android:textColor="@color/coffee_dark_brown"
                        android:textSize="15dp" />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/shopping_cancel"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_circle2"
                        android:src="@drawable/close" />

                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/shopping_count_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/l_regular"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:text="Won. 12000"
                    android:textColor="@color/coffee_dark_brown"
                    android:textSize="18dp" />

                <ImageButton
                    android:id="@+id/menu_detail_minus"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/minus_item"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/minus" />

                <TextView
                    android:id="@+id/shopping_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/l_regular"
                    android:text="1"
                    android:textColor="@color/coffee_dark_brown"
                    android:textSize="18dp" />

                <ImageButton
                    android:id="@+id/menu_detail_plus"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/add_item"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/add" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_margin="10dp"
        android:background="@color/gray"
        />

</LinearLayout>