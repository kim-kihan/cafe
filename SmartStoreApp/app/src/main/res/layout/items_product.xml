<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/layoutListItem"
    android:orientation="vertical"
    android:background="@drawable/layout_item"
    android:layout_marginHorizontal="5dp"
    android:padding="5dp"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/img_product"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:background="@drawable/img_item"
        android:src="@drawable/ic_launcher_foreground"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textListTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="타이틀 1"
            android:fontFamily="@font/s_regular"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textListPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="#000000"
            android:gravity="right"
            android:fontFamily="@font/s_light"
            android:text="Won. 7000" />
    </LinearLayout>

</LinearLayout>