<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DFC9B8"
    tools:context=".JoinActivity">

    <ImageButton
        android:id="@+id/back_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        android:layout_margin="10dp"
        android:background="@drawable/back"
        />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >



            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:srcCompat="@drawable/cafelogo" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/coffee_dark_brown"
                android:textSize="40dp"
                android:gravity="center"
                android:fontFamily="@font/s_heavy"
                android:text="Join" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/l_regular"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:text="아이디" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/join_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:background="@drawable/textview_regular"
                    android:ems="10"
                    android:imeOptions="actionDone"
                    android:inputType="textPersonName"
                    android:hint="아이디를 입력하세요."
                    android:textColorHint="#A39F9F"
                    android:layout_marginRight="5dp"
                    />

                <Button
                    android:id="@+id/id_check_img"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_item"
                    android:text="중복확인" />

                <!--        <ImageButton-->
                <!--            android:id="@+id/id_check_img"-->
                <!--            android:layout_width="40dp"-->
                <!--            android:layout_height="40dp"-->
                <!--            android:scaleType="fitXY"-->
                <!--            android:layout_marginLeft="5dp"-->
                <!--            android:background="@drawable/button_regular"-->
                <!--            app:srcCompat="@drawable/check" />-->

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/l_regular"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:text="비밀번호" />


            <EditText
                android:id="@+id/join_pw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="비밀번호를 입력하세요."
                android:textColorHint="#A39F9F"
                android:background="@drawable/textview_regular"
                android:textColor="@color/black"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/l_regular"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:text="이름" />


            <EditText
                android:id="@+id/join_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="@drawable/textview_regular"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:imeOptions="actionDone"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:hint="별명을 입력하세요."
                android:textColorHint="#A39F9F" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/l_regular"
                android:layout_marginLeft="40dp"
                android:layout_marginVertical="10dp"
                android:text="생년월일" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <NumberPicker
                    android:id="@+id/number_picker_yaer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="년" />
                <NumberPicker
                    android:id="@+id/number_picker_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="월" />
                <NumberPicker
                    android:id="@+id/number_picker_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="일" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/l_regular"
                android:layout_marginLeft="40dp"
                android:layout_marginVertical="10dp"
                android:text="성별" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/coffee_dark_brown"
                android:entries="@array/gender" />


            <Button
                android:layout_marginTop="20dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:id="@+id/button_join"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_item"
                android:text="Join" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>